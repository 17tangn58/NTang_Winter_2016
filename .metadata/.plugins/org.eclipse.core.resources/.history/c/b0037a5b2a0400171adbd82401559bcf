package textExcel;
//Nathan Tang 2nd period
// Update this file with your own code.

public class Spreadsheet implements Grid{
	Cell[][] sprsheet;
	public Spreadsheet(){
		sprsheet=new Cell[20][12];
	}
	@Override
	public String processCommand(String command){
		// TODO Auto-generated method stub
		String[] commandParts = command.split(" ");
		SpreadsheetLocation cell1=new SpreadsheetLocation(commandParts[0]);
		if(commandParts.length==1&&!commandParts[0].equals("clear"))
			return getGridText();
		if(commandParts.length==1&&commandParts[0].equals("clear"))
			return clear();
		if(commandParts[2].equals("="))
			sprsheet[cell1.getRow()][cell1.getCol()]= new TextCell(commandParts[2]);
		return command;
	}
	@Override
	public int getRows(){
		return 20;
	}

	@Override
	public int getCols(){
		return 12;
	}

	@Override
	public Cell getCell(Location loc){
		return sprsheet[loc.getRow()][loc.getCol()];
	}

	@Override
	public String getGridText(){
		System.out.println("   |A         |B         |C         |D         |E         |F         |G         |H         |I         |J         |K         |L         |");
		for(int i=0;i<sprsheet.length;i++){
			System.out.printf("%-3d|", i+1);
			for(int j=0;j<sprsheet[i].length;j++){
				char row=(char) (i+65);
				int col=j+1;
				String loc=row+""+col;
				SpreadsheetLocation cellLoc=new SpreadsheetLocation(loc);
				System.out.print(getCell(cellLoc));
			}
			System.out.println();
		}
		return "";
	}
	public String clear(){
		for(Cell[] i: sprsheet){
			for(Cell j: i)
				j=new EmptyCell();
		}
		return getGridText();
	}
}

